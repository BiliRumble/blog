#banner
  margin: 0 auto
  margin-top: 75px
  padding: 35px 25px 0
  max-width: 1400px
  width: 100%
  -webkit-animation: slide-in .8s backwards
  -moz-animation: slide-in .8s backwards
  -o-animation: slide-in .8s backwards
  -ms-animation: slide-in .8s backwards
  animation: slide-in .8s backwards

  +maxWidth768()
    padding: 20px 16px

  #background
    height: 400px
    overflow: hidden
    border-radius: 8px
    border: var(--style-border)
    -webkit-box-shadow: var(--icat-shadow-border)
    box-shadow: var(--icat-shadow-border)
    position: relative
    -webkit-transition: .6s
    -moz-transition: .6s
    -o-transition: .6s
    -ms-transition: .6s
    transition: .6s
    display: -webkit-box
    display: -moz-box
    display: -webkit-flex
    display: -ms-flexbox
    display: box
    display: flex
    -webkit-box-align: center
    -moz-box-align: center
    -o-box-align: center
    -ms-flex-align: center
    -webkit-align-items: center
    align-items: center

    +maxWidth768()
      height: 200px;

    #site-info
      padding: 0 1.25rem
      width: 100%
      text-align: center
      z-index: 1
      
      #site-title
        margin: 0
        color: var(--white)
        font-size: 1.85em

        +minWidth768()
            font-size: 2.85em

      #site-subtitle
        color: var(--light-grey)
        font-size: 1.15em

        +minWidth768()
          font-size: 1.72em

      #site_social_icons
        display: none
        margin: 0 auto
        text-align: center

        +maxWidth768()
          display: block

          .social-icon
            margin: 0 10px
            color: var(--light-grey)
            text-shadow: 2px 2px 4px rgba(0, 0, 0, .15)
            font-size: 1.43em