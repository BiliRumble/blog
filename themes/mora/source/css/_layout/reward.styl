.post-reward
  position: relative
  margin-top: 80px
  width: 100%
  text-align: center
  pointer-events: none
  margin-top: 0
  width: auto

  & > *
    pointer-events: auto

  .reward-button
    display: inline-block
    padding: 4px 24px
    cursor: pointer
    addBorderRadius(8)
    background: #f04a63
    color: #fff
    padding: 0
    width: 126px
    height: 40px
    line-height: 39px
    box-shadow: 0 8px 12px -3px #ee7d7936
    transition: all 0.4s ease 0s
    margin-right: 0.5rem

    &:hover
      background: #49b1f5
      box-shadow: 0 8px 12px -3px #286dea33

    i
      margin-right: 5px

  &:hover
    & > .reward-main
      display: block

  .reward-main
    position: absolute
    width: auto
    bottom: 40px
    left: 0
    z-index: 1003
    min-width: 100%
    display: none
    padding: 0 0 15px
    width: 100%
    addBorderRadius()

    .reward-all
      display: inline-block
      margin: 0
      padding: 20px 10px
      background: var(--reward-pop)

      &:before
        position: absolute
        bottom: -10px
        left: 0
        width: 100%
        height: 20px
        content: ''

      &:after
        position: absolute
        right: 0
        bottom: 2px
        left: 0
        margin: 0 auto
        width: 0
        height: 0
        border-top: 13px solid var(--reward-pop)
        border-right: 13px solid transparent
        border-left: 13px solid transparent
        content: ''

      .reward-item
        display: inline-block
        padding: 0 8px
        list-style-type: none
        vertical-align: top

        img
          width: 130px
          height: 130px

        .post-qr-code-desc
          width: 130px
          color: $reward-pop-up-color
